<h1>Want to Play?</h1>

<p>Drum roll please.... and your letters are...</p>

<ul class="list-inline">
<% @letters.each do |letter| %>
  <li class="list-inline-item"> <%= letter %> </li>
  <%end%>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="hidden" name="letters" value="<%= @letters.join.downcase %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <button type="submit" class="btn btn-primary">score me!</button>
</form>

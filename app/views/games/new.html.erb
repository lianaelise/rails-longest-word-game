<h1>Want to Play?</h1>

<p>Drum roll please.... and your letters are...</p>

<ul class="list-inline">
<% @letters.each do |letter| %>
  <li class="list-inline-item"> <%= letter %> </li>
  <%end%>
</ul>

<div class="form">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" class="form-control">
    <input type="hidden" name="letters" value="<%= @letters.join.downcase %>">
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <button type="submit" class="btn btn-primary form-control">score me!</button>
  </form>
</div>
